    <script>
        // Simple Cart Functionality
        let cart = {};

        function updateCartPreview() {
            const cartItemsDiv = document.getElementById('cart-items');
            const subtotalDiv = document.getElementById('cart-subtotal');
            cartItemsDiv.innerHTML = '';
            let subtotal = 0;
            let hasItems = false;
            Object.keys(cart).forEach(name => {
                const item = cart[name];
                hasItems = true;
                subtotal += item.qty * item.price;
                const div = document.createElement('div');
                div.className = 'cart-item';
                div.innerHTML = `
                <span class="cart-item-name">${name}</span>
                <span class="cart-item-qty">x${item.qty}</span>
                <span>$${item.qty * item.price} MXN</span>
                <button class="cart-item-remove" data-name="${name}" title="Eliminar">√ó</button>
            `;
                cartItemsDiv.appendChild(div);
            });
            if (!hasItems) {
                cartItemsDiv.innerHTML = '<em style="color:#aaa;">El carrito est√° vac√≠o</em>';
            }
            subtotalDiv.textContent = 'Subtotal: $' + subtotal + ' MXN';

            // Remove item event
            document.querySelectorAll('.cart-item-remove').forEach(btn => {
                btn.onclick = function () {
                    const n = this.getAttribute('data-name');
                    delete cart[n];
                    updateCartPreview();
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
                btn.addEventListener('click', function () {
                    const card = this.closest('.product-card');
                    const name = card.getAttribute('data-name');
                    const price = parseInt(card.getAttribute('data-price'));
                    if (!cart[name]) {
                        cart[name] = { qty: 1, price: price };
                    } else {
                        cart[name].qty += 1;
                    }
                    updateCartPreview();
                });
            });
            updateCartPreview();
        });
    </script>

